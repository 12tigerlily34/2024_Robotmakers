left_motor = Motor(Port.E, Direction.COUNTERCLOCKWISE)
right_motor = Motor(Port.F)
attach_motor = Motor(Port.A)
attach_motor = Motor(Port.B)
#Color_sensor1 = Motor(Port.F)
#Color_sensor2 = Motor(Port.E)
gyro_drive_base = DriveBase(left_motor,right_motor, wheel_diameter=51, axle_track= 104)
#(400, 1000, 400, 1000)
gyro_drive_base.straight (800)
wait(1000)
gyro_drive_base.turn(45)
wait(1000)
